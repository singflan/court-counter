<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>
    <style name="TextViewScoreTheme" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#280</item>
    </style>
    <style name="ScoreIncrementButtonsTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#008</item>
    </style>
</resources>
